@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<style>
    .topPanel .toolbar {
        float: left;
        padding-left: 5px;
    }

    .am-text-nowrap {
        white-space: nowrap;
    }
    .gridPanelDetail{
        margin-top:5px;
    }
</style>
<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" id="NF-add" authorize="yes"><i class="fa fa-plus"></i>新建</a>
