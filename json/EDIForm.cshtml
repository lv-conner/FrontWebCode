            <a class="btn btn-primary" id="NF-details" authorize="yes"><i class="fa fa-street-view"></i>查看</a>
        </div>
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
    </div>
</div>
